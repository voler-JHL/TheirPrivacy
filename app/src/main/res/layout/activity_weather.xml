                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:padding="6dp"
                    android:src="@mipmap/arrow_up" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cw_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/text_title_center_black"
                    android:text="穿衣指数：" />

                <TextView
                    android:id="@+id/tv_drsg_brf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="较不舒适"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_drsg_brf"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:padding="6dp"
                    android:src="@mipmap/arrow_up" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_drsg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="fjdsklafjdlak"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/text_title_center_black"
                    android:text="感冒指数：" />

                <TextView
                    android:id="@+id/tv_flu_brf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="较不舒适"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_flu_brf"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:padding="6dp"
                    android:src="@mipmap/arrow_up" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_flu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="fjdsklafjdlak"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/text_title_center_black"
                    android:text="运动指数：" />

                <TextView
                    android:id="@+id/tv_sport_brf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="较不舒适"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_sport_brf"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:padding="6dp"
                    android:src="@mipmap/arrow_up" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sport_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    style="@style/text_title_center_black"
                    android:text="旅游指数：" />

                <TextView
                    android:id="@+id/tv_trav_brf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="较不舒适"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_trav_brf"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:padding="6dp"
                    android:src="@mipmap/arrow_up" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_trav_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="fjdsklafjdlak"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.voler.theirprivacy.widget.MyListView
                android:id="@+id/lv_daily_forecast"
                style="@style/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/pink"></com.voler.theirprivacy.widget.MyListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>